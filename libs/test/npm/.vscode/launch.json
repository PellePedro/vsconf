{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "docker Tests",
      "preLaunchTask": "Generate .env",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/docker.spec.js"
      ],
      "env": {
        "SKYRAMP_DEBUG": "true",
      },
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "k8s Tests",
      "preLaunchTask": "Generate .env",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/k8s.spec.js"
      ],
      "env": {
        "SKYRAMP_DEBUG": "true"
      },
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
    },   
  ]
}
